<idea-plugin version="2" url="http://www.transround.com">
  <id>com.transround.nativeradmin</id>
  <name>Android On-Device Resource Localization</name>
  <version>1.0.1</version>
  <vendor email="lkiss@transround.com" url="http://www.transround.com">Transround</vendor>

  <description><![CDATA[
      Adds dynamic string resource management features enabling:
      <ul>
        <li>in-context community translation,</li>
        <li>on-the-fly localized string resource download,</li>
        <li>gesture driven language change by shaking the phone</li>
      </ul>
      <p>Supports 70+ languages including Chinese, Right-to-left languages</p>
      <p>Works with native Android apps using Gradle build.</p>
    ]]></description>

  <change-notes>
  </change-notes>

  <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="131"/>

  <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <application-components>
    <!-- Add your application components here -->
  </application-components>

  <project-components>
    <!-- Add your project components here -->
  </project-components>

  <actions>
    <!-- Add your actions here -->
    <action id="com.transround.nativeradmin.openui" class="com.transround.nativeradmin.OpenUI"
            text="Register App in Nativer"
            description="You can easily register your app and upload its resources to Nativer">
      <add-to-group group-id="ToolsMenu" anchor="first"/>
    </action>
  </actions>

</idea-plugin>